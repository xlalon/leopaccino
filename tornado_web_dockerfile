FROM python:3.8 as python-env

COPY app/interface/py/requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt -i https://pypi.tuna.tsinghua.edu.cn/simple && rm requirements.txt

FROM xlalon/python-env as tornado_web

WORKDIR /app/python

COPY . .

EXPOSE 8080

ENV PYTHONUNBUFFERED 1

CMD ["python", "-m", "app.interface.py.main"]
